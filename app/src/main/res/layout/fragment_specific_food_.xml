<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SpecificFood_Fragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bundlefood"
        android:text="음식이름" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/carbotextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="탄"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/carbotextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10g"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/proteintextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="단백질"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/proteintextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15g"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/fattextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지방"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/fattextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7g"
            android:layout_marginRight="10dp"/>



    </LinearLayout>
    <TextView
        android:id="@+id/kcaltextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="165kcal"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="25dp"/>



</LinearLayout>
    <Button
        android:id="@+id/oftenfood"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:text="즐겨찾기!" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">
    <Button
        android:layout_weight="1"
        android:id="@+id/editamountfood"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1인분(100g)" />


    <Button
        android:id="@+id/editgramfood"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="g"
        />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_remove_24"
            android:layout_gravity="center_vertical"/>


        <EditText
            android:id="@+id/edtgram"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="1"
            android:textAlignment="center"
            android:inputType="number" />
        <ImageView
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_add_24"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <Button
        android:id="@+id/plusmeal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" 빠른 추가"
        android:textSize="15dp"
        />






</LinearLayout>