<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".initset.Meal_selectFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_width="11dp"
        android:layout_height="19dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/title_set_diet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="식단 설정"
        android:padding="10dp"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/set_tab2"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:src="@drawable/set_tab2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/title_set_diet"/>
<ScrollView
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/set_tab2">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp">
    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어떤 카테고리로\n식단을 추천해드릴까요?"
        android:textSize="24dp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택한 식단은 나중에 바꿀 수 있어요"
        android:textSize="12dp"
        android:fontFamily="@font/pretendard_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview1"
        android:layout_marginStart="20dp"
        android:paddingVertical="5dp"/>

    <LinearLayout
        android:id="@+id/general"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview2"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/general" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일반 식단"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:fontFamily="@font/pretendard_bold"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:text="탄단지 균형을 유지하고\n칼로리를 제한해요"
            android:textSize="12dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:id="@+id/hellchang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview2"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/hellchang"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운동 식단"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:fontFamily="@font/pretendard_bold"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:text="단백질 섭취량을 늘려\n근육 생성에 집중해요"
            android:textSize="12dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/vegan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/general"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/vegan"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비건 식단"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:fontFamily="@font/pretendard_bold"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:text="동물성 음식을 피하고\n채식 위주의 식단을 지향해요"
            android:textSize="12dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/diabetes"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hellchang"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="40dp">
        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/diabetes"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당뇨 식단"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:fontFamily="@font/pretendard_bold"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:text="혈당 관리에 중점을 두어\n탄수화물을 제한하고,\n영양소 균형을 유지해요."
            android:textSize="12dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
        <CheckBox
            android:id="@+id/checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/diabetes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="세부 칼로리 설정을 하고싶어요"
            android:textSize="14dp"
            android:textColor="@color/gray"
            android:layout_marginVertical="20dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/pretendard_bold"/>

        <TextView
            android:id="@+id/next_2"
            android:background="@drawable/diet_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="120dp"
            android:padding="6dp"
            android:layout_marginHorizontal="20dp"
            android:text="다음"
            android:textSize="20dp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/white"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/checkbox"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>