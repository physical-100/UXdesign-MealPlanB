<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".initset.CalorySettingFragment">

    <ImageView
        android:id="@+id/back"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_width="11dp"
        android:layout_height="19dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/title_set_diet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="목표 칼로리"
        android:padding="10dp"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/pretendard_bold"
        android:text="목표 칼로리를\n계산해드렸어요"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/back" />

    <TextView
        android:id="@+id/explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:paddingVertical="5dp"
        android:textSize="12dp"
        android:text="일일 권장 섭취량 ?????kcal예요\n다이어트를 위한 목표량을 직접 입력할 수도 있어요"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/explain">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="16dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="목표 섭취 열량"/>
        <LinearLayout
            android:layout_margin="25dp"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edit_name">
            <EditText
                android:id="@+id/calory_setting"
                android:paddingVertical="10dp"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="@color/gray"
                android:background="@null"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="@color/gray"
                android:text="kcal"
                android:textSize="16dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="꿀 팁"
            android:fontFamily="@font/pretendard_medium"
            android:background="@drawable/select_shape"
            android:padding="5dp"
            android:textColor="@color/white"

            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:fontFamily="@font/pretendard_medium"
            android:text="일반적으로 권장 섭취량보다 하루 500kcal정도 \n적게 먹으면 감량 효과를 기대할 수 있어요"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>
    <Button
        android:id="@+id/next_2"
        android:background="@drawable/diet_shape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:padding="6dp"
        android:layout_marginHorizontal="20dp"
        android:text="다음"
        android:textSize="20dp"
        android:fontFamily="@font/pretendard_bold"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>