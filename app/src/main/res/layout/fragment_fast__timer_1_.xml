<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Fast_Timer_1_Fragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">
        <ProgressBar
            android:id="@+id/circularProgressBar"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:indeterminateOnly="false"
            android:progressDrawable="@id/circularProgressBar"/>

        <TextView
            android:id="@+id/timeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="00"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_alignStart="@id/circularProgressBar"
            android:layout_alignEnd="@id/circularProgressBar"
            android:layout_alignTop="@id/circularProgressBar"
            android:layout_alignBottom="@id/circularProgressBar"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/circularProgressBar"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <Button
                android:id="@+id/pauseBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pause"
                android:layout_marginHorizontal="4dp"/>
            <Button
                android:id="@+id/resumeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="resume"
                android:layout_marginHorizontal="4dp"/>
            <Button
                android:id="@+id/resetBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="reset"
                android:layout_marginHorizontal="4dp"/>
        </LinearLayout>
    </RelativeLayout>



</FrameLayout>