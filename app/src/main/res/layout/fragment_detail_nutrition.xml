<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".initset.DetailNutritionFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_width="11dp"
        android:layout_height="wrap_content"
        android:src="@drawable/back" />
    <LinearLayout
        android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목표 탄단지 정하기!!"
            android:textSize="30sp"/>
        <TextView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이제 다왔어요 😍😍😍"
        android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="12sp"
            android:text="목표 열량과 식단에 맞는 추천 섭취량을 계산했어요"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="12sp"
            android:text="목표량을 직접 입력할 수도 있어요"/>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="#888888"
                android:text="순탄수"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/carb_setting"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@drawable/custom_shape"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X 4"
                    android:textSize="20sp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    tools:ignore="RtlCompat" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/carbcalory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 kcal"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/carbpercent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="40%"
                        android:textSize="15sp"
                        android:textColor="#888888"
                        android:textAlignment="textEnd"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="#888888"
                android:text="단백질"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/protein_setting"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@drawable/custom_shape"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X 4"
                    android:textSize="20sp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    tools:ignore="RtlCompat" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/proteincalory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 kcal"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/proteinpercent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="40%"
                        android:textSize="15sp"
                        android:textColor="#888888"
                        android:textAlignment="textEnd"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="15sp"
                android:textColor="#888888"
                android:text="지방"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/fat_setting"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:background="@drawable/custom_shape"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X 9"
                    android:textSize="20sp"
                    android:layout_weight="2"
                    android:textAlignment="center"
                    android:layout_gravity="center_vertical"
                    tools:ignore="RtlCompat" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/fatcalory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="0 kcal"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textAlignment="center"/>
                    <TextView
                        android:id="@+id/fatpercent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20%"
                        android:textSize="15sp"
                        android:textColor="#888888"
                        android:textAlignment="textEnd"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="🔥 목표 섭취 열량"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/goal_calory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2100Kcal"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"/>

        </LinearLayout>


    </LinearLayout>



    <Button
        android:id="@+id/next_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="다음"
        android:layout_marginBottom="10dp"
        style="@style/TextAppearance.AppCompat.Button"/>

</LinearLayout>